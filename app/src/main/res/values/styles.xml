<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textSize">@dimen/textSize_normal1</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.SubTitle">
        <item name="android:paddingLeft">@dimen/offset_small3</item>
        <item name="android:paddingRight">@dimen/offset_small3</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>


    <style name="AppTheme.Title">
        <item name="android:paddingLeft">@dimen/offset_small3</item>
        <item name="android:paddingRight">@dimen/offset_small3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize_normal2</item>
    </style>

    <style name="AppTheme.FlatButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>

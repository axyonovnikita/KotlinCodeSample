<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/appBarContent_view"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_imageView"
                android:layout_width="@dimen/icon_material_size"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/offset_small4"
                android:paddingRight="@dimen/offset_small4"
                android:clickable="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_back"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/title_textView"
                style="@style/AppTheme.Title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                tools:text="title"/>

            <ImageView
                android:id="@+id/logout_imageView"
                android:layout_width="@dimen/icon_material_size"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/offset_small4"
                android:paddingRight="@dimen/offset_small4"
                android:clickable="true"
                app:srcCompat="@drawable/ic_logout"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_small"
            android:background="@color/divider"/>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</android.support.design.widget.CoordinatorLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/offset_big3"
    android:orientation="horizontal"
    android:padding="@dimen/offset_normal1"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/avatar_imageView"
        android:layout_width="@dimen/user_avatar_size_small"
        android:layout_height="@dimen/user_avatar_size_small"
        android:layout_gravity="center"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/offset_small3"
        android:paddingRight="@dimen/offset_small3">

        <TextView
            android:id="@+id/userName_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textStyle="bold"
            tools:text="username" />

        <TextView
            android:id="@+id/location_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/secondary_text"
            tools:text="location" />

    </LinearLayout>
</LinearLayout>
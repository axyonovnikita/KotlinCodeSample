<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/offset_small1"
    app:cardElevation="@dimen/offset_small3"
    app:cardUseCompatPadding="true"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/partial_post_header"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="50dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/carousel_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@color/cardview_dark_background"/>

            <include layout="@layout/partial_full_like"/>
        </FrameLayout>

        <com.jelvix.kotlincodesample.ui.view.indicator.CircleIndicatorRecyclerView
            android:id="@+id/indicator_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_small2"
            android:layout_gravity="center"
            tools:listitem="@layout/item_indicator"/>

        <include layout="@layout/partial_post_footer"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
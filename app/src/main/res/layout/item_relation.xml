<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/offset_big5"
    app:cardCornerRadius="@dimen/offset_small1"
    app:cardElevation="@dimen/offset_small3"
    app:cardUseCompatPadding="true"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/light_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/offset_small4"
            android:layout_marginStart="@dimen/offset_small4"
            android:paddingBottom="@dimen/offset_small4">

            <ImageView
                android:layout_width="@dimen/offset_big3"
                android:layout_height="@dimen/offset_big3"
                android:layout_gravity="center"
                android:src="@drawable/drawable_oval_light_gray" />

            <ImageView
                android:id="@+id/userAvatar_imageView"
                android:layout_width="@dimen/user_avatar_size"
                android:layout_height="@dimen/user_avatar_size"
                android:layout_gravity="center"
                android:src="@drawable/drawable_oval_white"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/offset_small3"
                        android:paddingRight="@dimen/offset_small3"
                        android:textSize="@dimen/textSize_normal2"
                        android:textStyle="bold"
                        tools:text="username" />

                    <TextView
                        android:id="@+id/fullName_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/offset_small2"
                        android:paddingLeft="@dimen/offset_small3"
                        android:paddingRight="@dimen/offset_small3"
                        android:textColor="@color/gray"
                        tools:text="full name" />
                </LinearLayout>

                <Button
                    android:id="@+id/follow_button"
                    style="@style/AppTheme.FlatButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/follow"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>